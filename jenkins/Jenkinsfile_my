pipeline {
    agent
    stages {
        stage ('BUILD') {
             steps
                  sh 'sleep 5'
                  sh 'This is a BUILD stage'
             }

         stage ('TEST') {
             steps
                   sh '''
                   sleep 5
                   echo "This is a TEST stage"
                   '''
             }

         stage ('DEPLOY') {
             steps
                 sh '''
                   sleep 5
                   echo "This is a DEPLOY stage"
                   '''
             }
    } 
}